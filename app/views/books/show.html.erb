<h2>User info</h2>
<table>
  <thead>
    <td>
      <%= image_tag @user.get_profile_image(100,100) %>
    </td>
  </thead>
  <tbody>
    <tr>
      <td>Name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>Introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
    <tr>
      <% if user.id == current_user.id %>
        <td>
          <% link_to "edit", edit_user_path %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book_found, method: :patch do |f| %>
        <div class="edit">
          <p>Title</p>
          <%= f.text_field :title,class: "form-control" %>
        </div>
        <div class="edit">
          <p>Opinion</p>
          <%= f.text_area :body,class: "form-control" %>
        </div>
        <div class="edit_submit">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      
      <%= link_to "Show", book_path(@book_found) %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>


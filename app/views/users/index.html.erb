<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザーの詳細-->
      <%= render 'user_info', user_found: @user_found %>
      <!--本の新規投稿-->
      <%= render 'books/new_book', book: @book %>
    </div>  
    <div class="offset-md-1"></div>
    <div class="col-md-8">
      <!--ユーザーの一覧-->
      <h2 class="title">Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>








